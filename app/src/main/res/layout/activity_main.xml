<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.ishanfx.pacelauncher.MainActivity">
    <ImageView
        android:id="@+id/imageViewMasterWalpaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/main_background"
        android:scaleType="centerInside"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerHomePages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"  />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnMenu"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_call"
            android:padding="20dp"
            android:background="@drawable/round_shape"
            android:onClick="showApps"
            android:layout_margin="@dimen/menu_image_margin"
            />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_chat"
            android:padding="20dp"
            android:background="@drawable/round_shape"
            android:onClick="showApps"
            android:layout_margin="@dimen/menu_image_margin"

            />
    </LinearLayout>

        <ImageButton

            android:id="@+id/btnMenu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_fiber_manual_record_black_24dp"
            android:padding="20dp"
            android:background="@drawable/round_shape"
            android:onClick="showApps"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/menu_image_margin"

            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnMenu"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_camera"
            android:padding="20dp"
            android:background="@drawable/round_shape"
            android:onClick="showApps"
            android:layout_margin="@dimen/menu_image_margin"

            />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_email"
            android:padding="20dp"
            android:background="@drawable/round_shape"
            android:onClick="showApps"
            android:layout_margin="@dimen/menu_image_margin"

            />
    </LinearLayout>


</RelativeLayout>
